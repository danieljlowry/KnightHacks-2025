{
  "manifest_version": 3,
  "name": "Study Companion App",
  "version": "1.0",
  "description": "Helps you stay focused by warning you of online distractions while studying.",
  "default_popup": "index.html",
  "permissions": [
    "tabs",
    "windows",
    "storage",
    "scripting",
    "nativeMessaging",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "TabGuard"
  }
}
